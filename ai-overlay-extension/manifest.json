{
  "manifest_version": 3,
  "name": "AI Overlay Assistant",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle AI Overlay"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["overlay.css"]
    }
  ]
}
